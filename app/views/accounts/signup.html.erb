<div id="main">
  <% less_form_for :user, :url => signup_path, :method => :post do |f| 	%>

    <div id="MENU_HEADER" class="pageTitle">Sign up to PMF</div>

    <div id="signup_form">
      <%= f.text_field :login %>
      <%= f.text_field :email %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation, :label => 'Confirm Password' %>
      <% f.wrap nil, :label=>"" do  %>
        <%= less_reverse_captcha_field(:user)%>
      <% end %>

      <%= f.wrap(:remember_me, :for => :remember_me){ check_box_tag :remember_me, 1, params[:remember_me], :class=>"checkbox"} %>

      <div class='row clear'>
        <div class="button">
          <%= f.submit 'Sign-up Now', :class => 'button' %>
          <div class="pmf_clear">&nbsp;</div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="pmf_clear">&nbsp;</div>