<table class="project_form" style="border-spacing: 10px; width: 100%;">

  <thead>
    <tr>
      <td style="width: 20%;"></td>
      <td style="width: 80%;"></td>
    </tr>
  </thead>

  <tr>
    <td>
      Blog Text:
    </td>
    <td>
      <i>
        Note: Blog text is parsed using textilise,
        allowing you to format your text entry.
      </i>
      <br/>
      <a target="_blank" href="http://textile.thresholdstate.com/">
        (More Info)
      </a>
    </td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>
      <%= f.text_area :body, :rows => 17, :cols => 90 %>
    </td>
  </tr>

  <tr>
    <td>
      Publish to MKC?
    </td>
    <td>
      <input type="checkbox" name="publish_to_mkc"/>
    </td>
  </tr>

  <tr>
    <td colspan="2" align="right">
      <input type="submit" value="Submit"/>
    </td>
  </tr>
</table>
