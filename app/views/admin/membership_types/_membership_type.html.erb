<tr>
  <% form_tag :action => "update", :id => membership_type.id do %>
    <td><b><%= membership_type.name %></b></td>

    <td>
      <%= select_tag :max_projects_listed,
        options_for_select(@select_options, membership_type.max_projects_listed),
        :onchange => "this.form.submit();" %>
    </td>

    <td>
      <%= select_tag :pc_project_limit,
        options_for_select(@select_options, membership_type.pc_project_limit),
        :onchange => "this.form.submit();" %>
    </td>

    <td>
      <%= select_tag :pc_limit,
        options_for_select(@select_options, membership_type.pc_limit),
        :onchange => "this.form.submit();" %>
    </td>

    <td>
      <%= select_tag :min_funding_limit_per_project,
        options_for_select(@min_funding_options, membership_type.min_funding_limit_per_project),
        :onchange => "this.form.submit();" %>
    </td>

    <td>
      <%= select_tag :funding_limit_per_project,
        options_for_select(@funding_options, membership_type.funding_limit_per_project),
        :onchange => "this.form.submit();" %>
    </td>

  <% end %>
</tr>