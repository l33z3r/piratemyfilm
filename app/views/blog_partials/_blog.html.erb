<div class="blog-row">

  <div class="blog-entry">
    <div class="blog-title"><%= link_to h(blog.title), :controller => "blogs", :action => "show", :id => blog.id %></div>

    <div class="blog-date"><%= blog.created_at.to_formatted_s(:long_ordinal) %></div>

    <div style="clear:both;"></div>

    <div class="share_buttons">
      <div class="facebook_button">
        <a name="fb_share" type="box_count" share_url="<%= url_for :only_path => false, :controller => "blogs", :action => "show", :id => blog.id %>"
           href="http://www.facebook.com/sharer.php">Share</a>
        <script src="http://static.ak.fbcdn.net/connect.php/js/FB.Share" type="text/javascript"></script>
      </div>

      <div class="tweet_button">
        <script type="text/javascript">
          tweetmeme_style = 'compact';
          tweetmeme_url = 'http://www.piratemyfilm.com';
        </script>
        <script type="text/javascript" src="http://tweetmeme.com/i/scripts/button.js"></script>
      </div>
    </div>

    <div style="clear:both;"></div>

    <div class="blog-body">
      <%=  truncate((blog_body_content blog), 500) %>

      <span class="links">
        <%= link_to "More", {:controller => "blogs", :action => "show", :id => blog.id}, :class => "more_link" %>
        <% if blog.project_id? %>
          | <%= link_to "View Project", :controller => :projects, :action => "show", :id => blog.project_id %>
        <% end %>
        <% if @p && (@p.id == blog.profile_id || @u.is_admin) && !blog.is_homepage_blog %>
          | <%= link_to "Edit", :controller => :blogs, :action => "edit", :id => blog.id %>
          | <%= link_to "Delete", blog_path(blog), :confirm => 'Are you sure?', :method => :delete %>
        <% end %>

      </span>
    </div>

    <div style="clear:both;"></div>

    <div class="blog_comments_link">
      <% if !blog.is_homepage_blog %>
        <%= link_to "#{pluralize(blog.num_comments, "comment")}", :controller => "blogs", :action => "show", :id => blog.id %>
      <% else %>
        <%= link_to "#{pluralize(blog.num_comments, "comment")}", blog.wp_comments_link %> (Note: this link will take you away from piratemyfilm.com where you can comment on Max's blog)
      <% end %>
    </div>

    <div style="clear:both;"></div>

  </div>
</div>