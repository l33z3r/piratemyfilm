<table class="project_form" style="border-spacing: 10px; width: 100%;">

  <thead>
    <tr>
      <td style="width: 20%;"></td>
      <td style="width: 80%;"></td>
    </tr>
  </thead>

  <% if @project %>
    <%= f.hidden_field :project_id, :value => @project.id %>
  <% end %>

  <%= f.hidden_field :owner_profile_id, :value => @u.profile.id %>
  
  <tr>
    <td>
      Title
    </td>
    <td>
      <%= f.text_field :title %>
    </td>
  </tr>
  <tr>
    <td>
      Body
    </td>
    <td>
      <i>
        Note: Blog text is parsed using textilise,
        allowing you to format your text entry.
      </i>
      <br/>
      <a target="_blank" href="http://textile.thresholdstate.com/">
        (More Info)
      </a>
    </td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>
      <%= f.text_area :body %>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <input type="submit" value="Submit"/>
    </td>
  </tr>
</table>
