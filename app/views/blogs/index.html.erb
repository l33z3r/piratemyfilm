<div class="pageTitle">Project Buzz</div>

<div class="pmf_clear">&nbsp;</div>

<% if @blogs.empty? %>
  <div class="pageTitleSmaller">
    No Buzz Found!
  </div>
  <div class="pmf_clear">&nbsp;</div>
<% end %>

<% @blogs.each do |item| %>
  <%= render :partial => "/blogs/templates/buzz", :locals => {:blog => item} %>
<% end %>

<%= pagination_controls_for @blogs if @blogs.respond_to? :total_pages %>