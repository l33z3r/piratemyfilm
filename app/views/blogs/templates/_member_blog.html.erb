<div class="blog-row blog">

  <div class="blog_left">
    <div class="icon">
      <%= link_to icon(blog.profile, :small), profile_path(blog.profile) %>
      <div class="follow_button">
        <%= follow_member_button_small blog.profile %>
      </div>
    </div>
    <div class="info">
      <div class="user_name">
        <%= link_to blog.profile.user.login, profile_path(blog.profile) %>
      </div>
      <% if blog.project %>
        <div class="blog_type">
          - <%= link_to "owner of:", project_path(blog.project) %>
        </div>
        <div class="user_info">
          <div class="user_icon">
            <div class="project_icon">
              <%= link_to project_icon(blog.project, :medium), project_path(blog.project) %>
            </div>
            <div class="project_title">
              <%= link_to blog.project.title, project_path(blog.project) %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="pmf_clear">&nbsp;</div>

      <div class="blog_body">
        <%= blog_body(blog, truncate_blog) %>
      </div>
    </div>
  </div>

  <div class="blog_right">
    <div class="share_buttons">
      <%= render :partial => "/blogs/templates/share_buttons",
        :locals => {:target_url => url_for(:only_path => false,
          :controller => "profiles", :action => "show", :id => blog.profile.user.id),
        :tweet_text => "New member blog from #{blog.profile.user.login}"} %>

      <div class="blog-date">
        <%= time_ago_in_words blog.created_at %> ago
      </div>
    </div>

    <div class="pmf_clear">&nbsp;</div>

    <div class="blog_comments_link">
      <%= link_to "#{pluralize(blog.num_comments, "comment")}", :controller => "blogs", :action => "show", :id => blog.id, :anchor => "comment_list" %> -
      <%= link_to "Add comment", :controller => "blogs", :action => "show", :id => blog.id, :anchor => "add_comment" %>
    </div>

    <div class="pmf_clear">&nbsp;</div>

  </div>

</div>

<div class="pmf_clear">&nbsp;</div>

<div class="dashed_light_border pmf_top_margin_10">&nbsp;</div>