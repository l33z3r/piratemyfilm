<div class="blog-row blog">

  <div class="blog_left">
    <div class="icon">
      <%= link_to image_tag("/images/mkc_avatar.png"), :controller => "blogs", :action => "mkc" %>
    </div>
    <div class="info">
      <div class="user_name">
        <%= link_to "maxkeiser.com", :controller => "blogs", :action => "mkc" %>
      </div>

      <div class="follow_button">
        <%= follow_mkc_blogs_button_small %>
      </div>

      <div class="pmf_clear">&nbsp;</div>

      <div class="blog_body">
        <%= link_to blog_body(blog),  blog.wp_comments_link %>
      </div>
    </div>
  </div>

  <div class="blog_right">
    <div class="blog-date">
      <%= time_ago_in_words blog.created_at %> ago
    </div>

    <div class="pmf_clear">&nbsp;</div>

    <div class="share_buttons">
      <%= render :partial => "/blogs/templates/share_buttons",
        :locals => {:target_url => url_for(:only_path => false,
          :controller => "blogs", :action => "show", :id => blog.id),
        :tweet_text => "New MKC blog: #{h awesome_truncate(blog.body, 50)}"} %>

    </div>

    <div class="pmf_clear">&nbsp;</div>

    <div class="blog_comments_link">
      <%= link_to "#{pluralize(blog.num_comments, "comment")}", blog.wp_comments_link %> (on www.maxkeiser.com)
    </div>

    <div class="pmf_clear">&nbsp;</div>

  </div>

  <div class="pmf_clear">&nbsp;</div>

  <div class="dashed_light_border pmf_top_margin_10">&nbsp;</div>