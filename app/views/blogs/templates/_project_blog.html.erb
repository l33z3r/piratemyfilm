<div class="blog-row blog">

  <div class="blog_left">
    <div class="icon">
      <%= link_to project_icon(blog.project, :medium), project_path(blog.project) %>
      <div class="follow_button">
        <%= follow_project_button_small blog.project %>
      </div>
    </div>
    <div class="info">
      <div class="project_info">
        <div class="project_title">
          <%= link_to h(blog.project.title), project_path(blog.project) %>
        </div>
        <div class="pmf_clear">&nbsp;</div>
        <div class="project_stats">
          <div class="funds_needed">
            <span><%= print_money blog.project.capital_required %></span> needed
          </div>
          <div class="pmf_clear">&nbsp;</div>
          <div class="percent_funded">
            <span><%= blog.project.percent_funded_with_pmf_fund_non_outstanding %>&#37</span> funded
          </div>
        </div>
      </div>
      <div class="blog_user_relationship">
        by <%= blog.user_relationship %>
      </div>
      <div class="user_info">
        <div class="user_icon">
          <%= icon(blog.profile, :small) %>
        </div>
        <div class="user_name">
          <%= link_to h(blog.profile.user.login), profile_path(blog.profile) %>
        </div>
      </div>

      <div class="pmf_clear">&nbsp;</div>

      <div class="blog_body">
        <%= blog_body(blog, truncate_blog, show_more_link) %>
      </div>
    </div>
  </div>

  <div class="blog_right">

    <div class="blog-date">
      <%= time_ago_in_words blog.created_at %> ago
    </div>

    <div class="pmf_clear">&nbsp;</div>

    <div class="share_buttons">
      <%= render :partial => "/blogs/templates/share_buttons",
        :locals => {:target_url => url_for(:only_path => false,
          :controller => "blogs", :action => "show", :id => blog.id),
        :tweet_text => "New update on project: #{blog.project.symbol}"} %>
    </div>

    <div class="pmf_clear">&nbsp;</div>

    <div class="blog_comments_link">
      <%= link_to "#{pluralize(blog.num_comments, "comment")}", :controller => "blogs", :action => "show", :id => blog.id, :anchor => "comment_list" %> -
      <%= link_to "Add comment", :controller => "blogs", :action => "show", :id => blog.id, :anchor => "add_comment" %>
    </div>

    <div class="pmf_clear">&nbsp;</div>

  </div>

</div>

<div class="pmf_clear">&nbsp;</div>

<div class="dashed_light_border pmf_top_margin_10">&nbsp;</div>