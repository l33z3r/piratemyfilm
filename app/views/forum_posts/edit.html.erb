<h1>Editing post in <%=h @post.topic.title%></h1>

<%= error_messages_for :forum_post %>


<% less_form_for(@post, :url => forum_topic_post_url(@forum, @topic, @post)) do |f| %>

    <%= f.text_area :body %>

    <%= f.submit "Update", :class=> "button" %>
<% end %>

<%= link_to 'Back', forum_topic_path(@forum, @topic) %>
