<div class="project_listings">
  <% for @entry in @entries do %>
  <h3>Latest Blog:</h3>
      <%= render :partial => "/blog_partials/blog", :locals => {:blog => @latest_blog} %>
  <%= link_to "More Blogs >>", {:controller => "blogs", :action => "homepage"} %>
  <h3>Projects:</h3>
      <% if @entry.is_a?(Blog) %>
        <%= render :partial => "/blog_partials/blog", :locals => {:blog => @entry} %>
      <% elsif @entry.is_a?(Project) %>
        <%= render :partial => "project", :locals => {:project => @entry} %>
      <% end %>
    <% end %>
