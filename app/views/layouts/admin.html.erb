<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; utf-8" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

    <meta name="description" content="The Film Futures Market for Pirates" />
    <meta name="keywords" content="max keiser, pirate film, market" />

    <title><%= @title || "Pirate My Film" %></title>

    <%= render :partial => 'shared/head_load' %>

    <%= yield :head %>

  </head>

  <body onload="doInit();">

    <div id="site_wrapper">

      <div id="header_links">
        <div class="menu bubplastic horizontal gray">
          <ul>
            <li>
              <span class="menu_r">
                <a href="/pages/how_it_works">
                  <span class="menu_ar">
                    How It Works
                  </span>
                </a>
              </span>
            </li>
            <li>
              <span class="menu_r">
                <a href="/pages/about_us">
                  <span class="menu_ar">
                    About Us
                  </span>
                </a>
              </span>
            </li>
            <li>
              <span class="menu_r">
                <a href="/pages/contact_us">
                  <span class="menu_ar">
                    Contact Us
                  </span>
                </a>
              </span>
            </li>
            <li>
              <span class="menu_r">
                <a href="/">
                  <span class="menu_ar">
                    Home
                  </span>
                </a>
              </span>
            </li>
          </ul>
          <div class="pmf_clear">&nbsp;</div>
        </div>
      </div>

      <div class="pmf_clear">&nbsp;</div>

      <div id="top_container">
        <div id="topsite_links">
          <div id="stats_container">
            <div class="pic">
              <%= link_to image_tag("vertical-pmf-fund-icon-small.png"),
                profile_path(PMF_FUND_ACCOUNT_ID) %>
            </div>
            <div id="stats">
              <div class="stat">
                PMF Fund Reserving
                <%= link_to "$#{print_money(@total_pmf_shares_reserved_amount)}",
                  profile_path(PMF_FUND_ACCOUNT_ID) %>
                in
                <%= link_to "#{@total_pmf_projects_invested_in}",
                  profile_path(PMF_FUND_ACCOUNT_ID) %> Projects
              </div>
              <div class="pmf_clear">&nbsp;</div>
              <div class="stat">
                Total of <b>$<%= @total_reservations_amount %></b>
                Reserved in
                <b><%= @total_reservations %></b> Projects
              </div>
            </div>
          </div>
        </div>

        <div id="signup_section">
          <%= render :partial => "shared/signup" %>
        </div>
        <div class="pmf_clear">&nbsp;</div>
      </div>

      <div id="content_container">
        <div id="stage" class="admin_section">

          <%= render :partial => 'shared/header' %>

          <div id="content">

            <div id="flashes">
              <%= show_default_flash -%>
            </div>

            <%= render :partial => "/admin/shared/admin_nav" %>

            <div class="pmf_clear">&nbsp;</div>

            <%= yield %>

          </div>

          <div class="pmf_clear">&nbsp;</div>

          <%= render :partial => 'shared/footer' %>

        </div>
      </div>
    </div>

    <div id="footer_scripts">
      <%= render :partial => 'shared/footer_scripts' %>
    </div>

  </body>
</html>