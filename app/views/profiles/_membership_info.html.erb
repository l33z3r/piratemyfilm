<div id="membership_info" class="pmf_top_margin_20">
  <% if @p == @profile %>
    <div class="membership_type">
      <div class="title">My Membership</div>
      <ul>
        <li>You are currently on <b><%= @u.membership_type.name %></b> Membership</li>

        <li>
          You can list up to <b><%= @u.membership_type.max_projects_listed %></b> projects
        </li>

        <li>
          Budget max is <b><%= print_money @u.membership_type.funding_limit_per_project %></b>
        </li>

        <li>
          You can reserve up to <b><%= @u.membership_type.pc_limit %></b> shares of any one project
        </li>

        <li>
          You can reserve shares in up to <b><%= @u.membership_type.pc_project_limit %></b> projects
        </li>
      </ul>
    </div>
  <% else %>
    <div class="membership_type">
      <div class="title"><%=  h @profile.user.login %>'s Membership</div>
      <ul>
        <li><%= h @profile.user.login %> is currently on <b><%= @profile.user.membership_type.name %></b> Membership</li>
      </ul>
    </div>
  <% end %>
</div>