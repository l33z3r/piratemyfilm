<div class="fields view-lite-row-description">

  <span class="header">Project Talent:</span>
  <span class="body">
    <div class="talent_fields">

      <div class="view-lite-row-numbers">
        <ul>
          <li class="label">Owner:</li>
          <li class="stat">
            <div class="linked_talent">
              <div class="talent_icon">
                <%= icon(project.owner.profile, :small) %>
              </div>
              <div class="talent_name">
                <%= link_to h(project.owner.login), profile_path(project.owner.profile) %>
              </div>
            </div>
          </li>
          <li class="pmf_clear"></li>
          <li class="label">Producers:</li><li class="stat"><%= producers_for project %></li>
          <li class="pmf_clear"></li>
          <li class="label">DOPs:</li><li class="stat"><%= directors_photography_for project %></li>
          <li class="pmf_clear"></li>
          <li class="label">Exec Producers:</li><li class="stat"><%= exec_producers_for project %></li>
          <li class="pmf_clear"></li>
        </ul>
      </div>

      <div class="view-lite-row-numbers">
        <ul>
          <li class="label">Actors:</li><li class="stat"><%= actors_for project %></li>
          <li class="pmf_clear"></li>
          <li class="label">Directors:</li><li class="stat"><%= directors_for project %></li>
          <li class="pmf_clear"></li>
          <li class="label">Writers:</li><li class="stat"><%= writers_for project %></li>
          <li class="pmf_clear"></li>
          <li class="label">Editors:</li><li class="stat"><%= editors_for project %></li>
          <li class="pmf_clear"></li>
        </ul>
      </div>

      <div class="pmf_clear">&nbsp;</div>

    </div>
  </span>
</div>