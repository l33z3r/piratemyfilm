<% if logged_in %>
  <h3>
    You have <%= @my_subscription.nil? ? 0 : @my_subscription.amount %> producer copies reserved for this project.
    <% if @max_subscription_reached %>
      Your limit for this project has been reached.
    <% else %>
      You can reserve up to <%= @max_subscription %> producer copies.
    <% end %>
  </h3>
<% end %>

<div class="left">
  <% if logged_in %>

    <% if !@max_subscription_reached %>
      <form method="post" action="<%= project_project_subscriptions_path(@project)-%>" class="left">
        <input type="submit" value="Reserve Producer Copy"/>
      </form>
    <% end %>

    <% if @my_subscription %>
      <% form_tag project_project_subscription_path(@project, @my_subscription), :method => :delete, :class => "left" do %>
        <input type="submit" value="Cancel Producer Copy"/>
      <% end %>
    <% end %>

  <% else %>
    You must <%= link_to "Log In", login_path %> in order to reserve producer copies.
  <% end %>
</div>

<div class="right">
  <% if @u and @project.owner == @u %>
    <%= link_to "Edit Project", edit_project_path(@project) %> |
  <% end %>
  <%= link_to "List a Project", new_project_path %> |
  <%= link_to "All Projects", projects_path %>
</div>

<div style="clear: both;"></div>
<hr>
<div id="project-overview">        

  <div class="project-overview-buttonszone">

    <div class="project-overview-button" style="width:250px;">
      <span>Project title</span>
      <p><%=h @project.title%></p>
    </div>

    <div class="project-overview-button">
      <span>Project ID</span>
      <p><%= @project.id %></p>
    </div>

    <div class="project-overview-button">
      <span>Budget</span>
      <p>$<%=h @project.capital_required%></p>
    </div>

    <div class="project-overview-button">
      <span>User Rating</span>
      <p>
        <%= @user_rating %>
        <% if logged_in && !@my_project_rating %>
          <a href="#user_rating">(Rate)</a>
        <% end %>
      </p>
    </div>

    <div class="project-overview-button">
      <span>PMF Rating</span>
      <p>
        <%= @admin_rating %>
        <% if_admin do %>
          <a href="#admin_rating">(Rate)</a>
        <% end %>
      </p>
    </div>

  </div><!--CLOSE PROJECT-OVERVIEW-BUTTONSZONE-->
</div><!--CLOSE PROJECT-OVERVIEW-->

