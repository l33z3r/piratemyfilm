<h2>Project Subscribers</h2>
<hr>

<div style="width: 100%">
  <% for s in @project.subscribers do %>
      <div style="float: left; padding: 10px;">
        <%= render :partial => "profiles/profile", :object => s.profile %>      
      </div>
    <% end %>
  </div>

  <div style="clear: both;"></div>

  <%= link_to "All Projects", projects_path, :class => "right"%>