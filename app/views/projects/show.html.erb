      <%=h @project.genre.title%>      
    </td>
  </tr>
  <tr>
    <td>
      Synopsis: 
    </td>
    <td>
      <%=h @project.synopsis%>      
    </td>
  </tr>
  <tr>
    <td>
      Description: 
    </td>
    <td>
      <%=h @project.description%>      
    </td>
  </tr>
  <tr>
    <td>
      Cast: 
    </td>
    <td>
      <%=h @project.cast%>      
    </td>
  </tr>
  <tr>
    <td>
      Web Address: 
    </td>
    <td>
      <%=h @project.web_address%>      
    </td>
  </tr>
  <tr>
    <td>
      Capital Required: 
    </td>
