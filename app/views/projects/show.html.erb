<% if_admin do %>
  <a name="admin_rating">&nbsp;</a>
<% end %>


<% form_tag :controller => "admin/project_rating", :action => "rate", :project_id => @project.id do %>
  <fieldset>
    <legend><span>PMF Rating</span></legend>
    <ol>
      <li>
        <label>Current Rating</label>
        <%= @admin_rating %>
      </li>

      <% if_admin do %>
        <li>
          <label>Set Rating</label>
          <%= select_tag  "rating", options_for_select(@admin_rating_select_opts, @admin_rating) %>
          <%= submit_tag "Submit" %>
        </li>
      <% end %>

    </ol>
  </fieldset>
<% end %>

<a name="user_rating">&nbsp;</a>

<% form_tag :controller => "project_rating", :action => "rate", :project_id => @project.id do %>
  <fieldset>
    <legend><span>User Rating</span></legend>
    <ol>
      <li>
        <label>Current Rating</label>
        <%= @user_rating %>
      </li>

      <% if logged_in %>
        <li>
          <label>Your Rating</label>
          <% if @my_project_rating %>
            <%= @my_project_rating.rating %>
          <% else %>
            <%= select_tag  "rating", options_for_select(@rating_select_opts, @user_rating) %>
            <input type="submit" name="submit" value="Submit"/>
          <% end %>
        </li>
      <% end %>

    </ol>
  </fieldset>
<% end %>

