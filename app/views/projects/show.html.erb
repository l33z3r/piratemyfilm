<h1><%=h @project.title%></h1>

<% if @my_subscription.nil? %>
  <form class="right" method="post" action="<%= project_project_subscriptions_path(@project) -%>">
    <input type="submit" value="Prebuy Now!"/>
  </form>
<% else %>  
  <% form_tag project_project_subscription_path(@project, @my_subscription), :method => :delete, :class => "right" do %>
    <input type="submit" value="Revoke Prebuy!"/>
  <% end %>
<% end %>

<table>
  <tr>
    <td>
      Owned by: 
    </td>
