<% if !@hide_filter_params %>
  <div id="filter_param_box">
    <% form_tag :controller => "projects", :action => "filter_by_param" do %>
      View projects by:
      <%= select_tag :filter_param, options_for_select(@filter_params, "Please Choose..."), :onchange => "this.form.submit();" %>
    <% end %>
  </div>
<% end %>