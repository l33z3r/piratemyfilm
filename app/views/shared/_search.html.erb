<% form_tag search_projects_path, :method => :get, :class => "navbar-button" do -%>
  <div id="search">
    <img src="/images/brand-search.gif" alt="Search" />
    <%= text_field_tag 'search[q]', (params[:search] && params[:search][:q] ? params[:search][:q] : 'Search'), :id => 'search_q', :size => 16 %>
    <input type="image" src="/images/brand-go-off.gif" name="submit" />
  </div>
<%- end -%>