<div class="blog-row blog">

  <div class="blog_left">
    <div class="icon">
      <%= link_to project_icon(pmf_subscription.project, :medium), project_path(pmf_subscription.project) %>
    </div>
    <div class="info">
      <div class="blog_type">
        PMF Fund Subscription by
      </div>
      <div class="user_info">
        <div class="user_icon">
          <%= link_to image_tag("/images/pmf_fund_avatar.png"), profile_path(PMF_FUND_ACCOUNT_ID) %>
        </div>
        <div class="user_name">
          <%= link_to "PMF Fund", profile_path(PMF_FUND_ACCOUNT_ID) %>
        </div>
      </div>

      <div class="pmf_clear">&nbsp;</div>

      <div class="project_title">
        on project <%= link_to awesome_truncate(pmf_subscription.project.title, 50), project_path(pmf_subscription.project) %>:
      </div>

      <div class="blog_body">
        PMF Fund
        <% if pmf_subscription.amount > 0 %>
          Reserved <b><%= pmf_subscription.amount %></b> Shares
        <% else %>
          Canceled <b><%= 0 - pmf_subscription.amount %></b> Shares
        <% end %>
      </div>
    </div>
  </div>

  <div class="blog_right">
    <div class="share_buttons">
      <div class="share_buttons">
        <div class="tweet_button">
          <a href="http://twitter.com/share?url=<%= url_encode(url_for(:only_path => false,
                 :controller => "projects", :action => "show", :id => pmf_subscription.project.id)) %>&via=piratemyfilm&text=PMF Fund Subscription on Project: <%= pmf_subscription.project.symbol %>"
             class="twitter-share-button"
             data-count="vertical" data-related="piratemyfilm">Tweet</a>
          <script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
        </div>

        <div class="facebook_button">
          <a name="fb_share" type="box_count" share_url="<%= url_for :only_path => false,
               :controller => "projects", :action => "show", :id => pmf_subscription.project.id %>"
             href="http://www.facebook.com/sharer.php">Share</a>
          <script src="http://static.ak.fbcdn.net/connect.php/js/FB.Share" type="text/javascript"></script>
        </div>
      </div>

      <div class="blog-date">
        <%= pmf_subscription.created_at.to_formatted_s(:long_ordinal) %>
      </div>
    </div>

    <div class="pmf_clear">&nbsp;</div>

  </div>

</div>

<div class="pmf_clear">&nbsp;</div>

<div class="dashed_light_border pmf_top_margin_10">&nbsp;</div>