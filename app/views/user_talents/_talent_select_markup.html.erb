<div class="pageTitle">Project Talent</div>

<div class="pmf_clear">&nbsp;</div>

<div class="pageTitleSmall left">
  Viewing all <%= talent_type_name %>s
</div>

<div class="pmf_clear">&nbsp;</div>

<div id="talents">
  <% talents.each do |talent| %>
    <div class="user_talent">
      <div class="user-icon">
        <%= link_to_function unlinked_icon(talent.user.profile, :small), "addTalent(#{talent.id}, #{project.id});" %>
      </div>
      <div class="talent_info">
        <div class="username">
          <%= link_to_function h(talent.user.login), "addTalent(#{talent.id}, #{project.id});" %>
        </div>
        <div class="rating">
          Rating: <span><%= talent.current_rating %></span>
        </div>
      </div>

      <div class="pmf_clear">&nbsp;</div>
    </div>
  <% end %>
</div>

<div class="pmf_clear">&nbsp;</div>